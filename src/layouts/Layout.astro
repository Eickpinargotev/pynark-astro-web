---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Chatbots que convierten visitas en ventas y citas. Especialistas en agentes de servicio al cliente." } = Astro.props;
// SSR: Detect initial theme from session cookie to avoid flash on navigation (default to light)
const cookieTheme = Astro.cookies.get('color-theme')?.value;
const initialTheme: 'dark' | 'light' = cookieTheme === 'dark' ? 'dark' : 'light';
---

<!DOCTYPE html>
<html lang="es" class={`scroll-smooth ${initialTheme === 'dark' ? 'dark' : ''}`} data-theme-init data-theme={initialTheme} style={`background-color:${initialTheme==='dark'?'#0f172a':'#ffffff'}; color-scheme:${initialTheme==='dark'?'dark':'light'}`}>
  <head>
    <!-- Prevent theme flash: hide until theme is applied -->
    <style>
      html[data-theme-init] { visibility: hidden; }
      html[data-theme-init] *, html[data-theme-init] *::before, html[data-theme-init] *::after {
        transition: none !important;
        animation: none !important;
      }
  /* Neutralize UA button styles as soon as data-theme is present (pre-Tailwind) */
  html[data-theme] #theme-toggle { appearance: none; border: none; }
      /* Fallback styles before Tailwind loads to avoid white flash */
      html[data-theme="dark"] #theme-toggle { background-color: #1f2937; color: #94a3b8; }
      html[data-theme="light"] #theme-toggle { background-color: #f1f5f9; color: #334155; }
    </style>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content={initialTheme === 'dark' ? '#0f172a' : '#3b82f6'} />
    <!-- No-flash theme init: per-session default light, override by session selection, before paint -->
    <script>
      (function () {
        var root = document.documentElement;
        root.setAttribute('data-theme-init', '');
        try {
          const readCookie = (name: string) => {
            var m = document.cookie.match(new RegExp('(?:^|; )' + name.replace(/[-.]/g,'\\$&') + '=([^;]*)'));
            return m ? decodeURIComponent(m[1]) : null;
          };
          var t = readCookie('color-theme') || sessionStorage.getItem('color-theme');
          if (!t) { t = 'light'; sessionStorage.setItem('color-theme', t); }
          // Always sync cookie with current value to keep SSR in sync across navigations
          document.cookie = 'color-theme=' + t + '; path=/; samesite=lax';
          var isDark = t === 'dark';
          root.classList.toggle('dark', isDark);
          root.style.colorScheme = isDark ? 'dark' : 'light';
          // Set background early to avoid white flash
          root.style.backgroundColor = isDark ? '#0f172a' : '#ffffff';
          root.setAttribute('data-theme', isDark ? 'dark' : 'light');
          var meta = document.querySelector('meta[name="theme-color"]');
          if (meta) meta.setAttribute('content', isDark ? '#0f172a' : '#3b82f6');
        } catch (e) { /* ignore */ }
        root.removeAttribute('data-theme-init');
      })();
    </script>
    <link rel="icon" type="image/png" href="/assets/pynark_favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="bg-gradient-to-br from-slate-50 to-blue-50 dark:from-slate-900 dark:to-slate-800 min-h-screen">
    <nav class="fixed top-0 w-full z-50 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-slate-200/50 dark:border-slate-700/50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href="/" aria-label="Ir al inicio" class="flex items-center space-x-2 group">
            <img src="/assets/pynark_favicon.png" alt="Pynark" class="w-8 h-8" />
            <span class="font-display font-bold text-xl text-slate-900 dark:text-white">
              Pynark <span class="text-violet-600 dark:text-violet-400">automation</span>
            </span>
          </a>
          
          <div class="hidden md:flex items-center space-x-8">
            <a href="/" class="nav-link font-medium text-slate-700 dark:text-slate-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">INICIO</a>
            <a href="/#servicios" class="nav-link font-medium text-slate-700 dark:text-slate-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">SERVICIOS</a>
            <a href="/#proceso" class="nav-link font-medium text-slate-700 dark:text-slate-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">PROCESO</a>
            <a href="/pricing" class="nav-link font-medium text-slate-700 dark:text-slate-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">PRECIOS</a>
            <a href="/faq" class="nav-link font-medium text-slate-700 dark:text-slate-300 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">PREGUNTAS</a>
          </div>

          <div class="flex items-center space-x-4">
            <button id="theme-toggle" class="p-2 rounded-lg bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-slate-100 transition-colors">
              <svg id="theme-toggle-dark-icon" class={initialTheme === 'dark' ? 'hidden w-5 h-5' : 'w-5 h-5'} fill="currentColor" viewBox="0 0 20 20">
                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
              </svg>
              <svg id="theme-toggle-light-icon" class={initialTheme === 'dark' ? 'w-5 h-5' : 'hidden w-5 h-5'} fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
              </svg>
            </button>
            
            <!-- Mobile menu button -->
            <button id="mobile-menu-toggle" class="md:hidden p-2 rounded-lg bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400" aria-controls="mobile-menu" aria-expanded="false" aria-label="Abrir menú de navegación">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Mobile menu -->
        <div id="mobile-menu" class="md:hidden hidden pb-4">
          <div class="flex flex-col space-y-2">
            <a href="/" class="nav-link block px-3 py-2 rounded-lg font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">INICIO</a>
            <a href="/#servicios" class="nav-link block px-3 py-2 rounded-lg font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">SERVICIOS</a>
            <a href="/#proceso" class="nav-link block px-3 py-2 rounded-lg font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">PROCESO</a>
            <a href="/pricing" class="nav-link block px-3 py-2 rounded-lg font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">PRECIOS</a>
            <a href="/faq" class="nav-link block px-3 py-2 rounded-lg font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">PREGUNTAS</a>
          </div>
        </div>
      </div>
    </nav>

    <main class="pt-16">
      <slot />
    </main>

    <footer class="bg-slate-900 dark:bg-slate-950 text-white py-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <p class="text-slate-400 mb-2">&gt; Pulsa Ctrl+W para salir</p>
        <p class="text-slate-300">© 2025 Pynark automation by Pynark</p>
        <p class="text-slate-400">Desarrollado con ❤️ desde Ecuador para el mundo</p>
      </div>
    </footer>

    <script>
  // Theme toggle functionality (per-session + session cookie for SSR on navigation)
      const themeToggle = document.getElementById('theme-toggle');
      const darkIcon = document.getElementById('theme-toggle-dark-icon');
      const lightIcon = document.getElementById('theme-toggle-light-icon');
      const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');

      // Reflect current theme to icons without changing classes (class set in <head>)
      if (document.documentElement.classList.contains('dark')) {
        lightIcon?.classList.remove('hidden');
      } else {
        darkIcon?.classList.remove('hidden');
      }

      // Theme toggle event
      themeToggle?.addEventListener('click', function() {
        darkIcon?.classList.toggle('hidden');
        lightIcon?.classList.toggle('hidden');

        if (document.documentElement.classList.contains('dark')) {
          document.documentElement.classList.remove('dark');
          sessionStorage.setItem('color-theme', 'light');
          document.cookie = 'color-theme=light; path=/; samesite=lax';
          document.documentElement.style.colorScheme = 'light';
          document.documentElement.setAttribute('data-theme','light');
          const meta = document.querySelector('meta[name="theme-color"]');
          if (meta) meta.setAttribute('content', '#3b82f6');
        } else {
          document.documentElement.classList.add('dark');
          sessionStorage.setItem('color-theme', 'dark');
          document.cookie = 'color-theme=dark; path=/; samesite=lax';
          document.documentElement.style.colorScheme = 'dark';
          document.documentElement.setAttribute('data-theme','dark');
          const meta = document.querySelector('meta[name="theme-color"]');
          if (meta) meta.setAttribute('content', '#0f172a');
        }
      });

      // Mobile menu behavior with outside click + accessibility
      (function(){
  if(!mobileMenuToggle || !mobileMenu) return;
  const mmToggle = mobileMenuToggle as HTMLElement;
  const mm = mobileMenu as HTMLElement;
        let isOpen = false;
        let outsideHandler = null as ((e: MouseEvent)=>void) | null;
        let escHandler = null as ((e: KeyboardEvent)=>void) | null;

        function openMenu(){
          if(isOpen) return;
            mm.classList.remove('hidden');
            mmToggle.setAttribute('aria-expanded','true');
            isOpen = true;
            // Delay adding outside listener to avoid immediate trigger from the same click
            setTimeout(()=>{
              outsideHandler = function(ev){
                const target = ev.target as HTMLElement;
                if(!mm.contains(target) && target !== mmToggle && !mmToggle.contains(target)){
                  closeMenu();
                }
              };
              document.addEventListener('click', outsideHandler!);
            },0);
            escHandler = function(ev){ if(ev.key === 'Escape'){ closeMenu(); }};
            document.addEventListener('keydown', escHandler);
        }

        function closeMenu(){
          if(!isOpen) return;
          mm.classList.add('hidden');
          mmToggle.setAttribute('aria-expanded','false');
          isOpen = false;
          if(outsideHandler){ document.removeEventListener('click', outsideHandler); outsideHandler = null; }
          if(escHandler){ document.removeEventListener('keydown', escHandler); escHandler = null; }
        }

        mmToggle.addEventListener('click', function(){
          isOpen ? closeMenu() : openMenu();
        });

        // Close on navigation (when clicking a link inside)
        mm.querySelectorAll('a').forEach(a => {
          a.addEventListener('click', ()=> closeMenu());
        });
      })();

      // Highlight active nav link
      const currentPath = window.location.pathname;
      const navLinks = document.querySelectorAll('.nav-link');
      
      navLinks.forEach(link => {
        const href = link.getAttribute('href');
        if ((currentPath === '/' && href === '/') || (currentPath !== '/' && href !== '/' && href && currentPath.startsWith(href))) {
          link.classList.add('text-primary-600', 'dark:text-primary-400');
          link.classList.remove('text-slate-700', 'dark:text-slate-300');
        }
      });

      // Prevent unwanted scrolling on page load
      if (window.location.hash && !['#contact', '#proceso', '#servicios'].includes(window.location.hash)) {
        setTimeout(() => {
          window.scrollTo(0, 0);
        }, 100);
      }
    </script>
  </body>
</html>

<style>
  html {
    font-family: 'Inter', system-ui, sans-serif;
  }
  
  .font-display {
    font-family: 'Plus Jakarta Sans', 'Inter', system-ui, sans-serif;
  }
</style>
